{
    "name": "production-project",
    "version": "1.1.1",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "prepare": "husky install"
    },
    "devDependencies": {
        "husky": "^7.0.0",
        "lint-staged": "^13.0.3",
        "eslint": "^8.10.0",
        "prettier": "2.7.1",
        "stylelint": "^14.5.3",
